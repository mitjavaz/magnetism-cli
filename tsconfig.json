{
  "include": ["src/**/*", "src/magnetism-cli.ts"],
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2017",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "ts-node": { "esm": true }
}
